@model BestStoreMVC.Models.Users

@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Login - Product Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container d-flex justify-content-center mt-5">
        <div class="signin-section w-50">
            <h2 class="fw-bold mb-4">Sign In to Your Account</h2>
            @if (TempData["Message"] != null)
            {       
                <div class="alert alert-danger mt-3">@TempData["Message"]</div>
            }
            <form asp-action="Login" asp-controller="Auth" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control w-50" placeholder="Enter email" />

                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label"></label>
                    <input asp-for="Password" type="password" class="form-control w-50" placeholder="Enter password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-outline-primary">Sign In</button>

                <div class="mt-3">
                    <span>Don't have an account?</span>
                    <a  asp-action="Ragistraction" class="link-primary">Sign up</a>
                </div>
            </form>

            
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
